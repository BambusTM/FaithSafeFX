<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="background" prefHeight="400.0" prefWidth="600.0" stylesheets="@styles/Styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.yorun.faithsafe.ResetPwController">
    <children>
        <ButtonBar layoutY="360.0" prefHeight="40.0" prefWidth="600.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <buttons>
                <Button id="button" fx:id="abortButton" mnemonicParsing="false" onAction="#abortReset" prefWidth="70.0" stylesheets="@styles/Styles.css" text="Abort" />
                <Button id="button" fx:id="finishButton" mnemonicParsing="false" onAction="#finishReset" prefWidth="70.0" stylesheets="@styles/Styles.css" text="Finish" />
            </buttons>
            <padding>
                <Insets right="10.0" />
            </padding>
        </ButtonBar>
        <TextField id="textField" fx:id="usernameField" layoutX="165.0" layoutY="180.0" prefHeight="35.0" prefWidth="270.0" promptText="Enter username" stylesheets="@styles/Styles.css" />
        <PasswordField id="textField" fx:id="passwordField" layoutX="165.0" layoutY="223.0" prefHeight="35.0" prefWidth="270.0" promptText="Enter password" stylesheets="@styles/Styles.css" />
        <PasswordField id="textField" fx:id="confirmPasswordField" layoutX="165.0" layoutY="266.0" prefHeight="35.0" prefWidth="270.0" promptText="Confirm Password" stylesheets="@styles/Styles.css" />
        <Label id="warningText" fx:id="passwordWarning" layoutX="326.0" layoutY="302.0" prefHeight="17.0" prefWidth="109.0" stylesheets="@styles/Styles.css" textFill="RED">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
      <Label id="header" layoutX="158.0" layoutY="55.0" stylesheets="@styles/Styles.css" text="Register a new user" />
      <Label id="bodyText" layoutX="147.0" layoutY="100.0" stylesheets="@styles/Styles.css" text="Don't give your password to anybody, not even your dog." />
    </children>
</AnchorPane>
