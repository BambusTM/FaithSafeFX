<AnchorPane id="background" prefHeight="400.0" prefWidth="600.0" stylesheets="@styles/Styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.yorun.faithsafe.CreatePwController">
   <children>
      <ButtonBar layoutY="360.0" prefHeight="40.0" prefWidth="600.0">
        <buttons>
          <Button id="buttonOutline" mnemonicParsing="false" onAction="#cancelCreatePw" stylesheets="@styles/Styles.css" text="Cancel" />
            <Button id="button" layoutX="515.0" layoutY="18.0" mnemonicParsing="false" onAction="#finishCreatePw" stylesheets="@styles/Styles.css" text="Create" />
        </buttons>
         <padding>
            <Insets bottom="5.0" right="10.0" />
         </padding>
      </ButtonBar>
      <Label id="header" contentDisplay="CENTER" layoutX="163.0" layoutY="14.0" stylesheets="@styles/Styles.css" text="Create a password" textAlignment="CENTER" textFill="#390c0c">
         <font>
            <Font size="36.0" />
         </font>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </Label>
      <Label id="header2" layoutX="66.0" layoutY="70.0" stylesheets="@styles/Styles.css" text="Username:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label id="header2" layoutX="66.0" layoutY="103.0" prefHeight="35.0" prefWidth="109.0" stylesheets="@styles/Styles.css" text="Domain:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label id="header2" layoutX="66.0" layoutY="138.0" prefHeight="35.0" prefWidth="109.0" stylesheets="@styles/Styles.css" text="Email:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label id="header2" layoutX="66.0" layoutY="173.0" prefHeight="35.0" prefWidth="109.0" stylesheets="@styles/Styles.css" text="Password:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label id="header2" layoutX="66.0" layoutY="208.0" prefHeight="35.0" prefWidth="109.0" stylesheets="@styles/Styles.css" text="Validate:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField id="textField" fx:id="createPwUsername" layoutX="226.0" layoutY="70.0" prefHeight="30.0" prefWidth="292.0" promptText="Username" stylesheets="@styles/Styles.css" />
      <TextField id="textField" fx:id="createPwDomain" layoutX="226.0" layoutY="105.0" prefHeight="30.0" prefWidth="292.0" promptText="www.example.com" stylesheets="@styles/Styles.css" />
      <TextField id="textField" fx:id="createPwEmail" layoutX="226.0" layoutY="140.0" prefHeight="30.0" prefWidth="292.0" promptText="example@exmp.com" stylesheets="@styles/Styles.css" />
      <TextField id="textField" fx:id="createPwPassword" layoutX="226.0" layoutY="175.0" onKeyTyped="#confirmPw" onMouseClicked="#confirmPw" prefHeight="30.0" prefWidth="292.0" promptText="Password" stylesheets="@styles/Styles.css" />
      <TextField id="textField" fx:id="createPwConfirmPassword" layoutX="226.0" layoutY="210.0" onKeyTyped="#confirmPw" onMouseClicked="#confirmPw" prefHeight="30.0" prefWidth="292.0" promptText="Password" stylesheets="@styles/Styles.css" />
      <Label id="warningText" fx:id="createPwWarning" layoutX="368.0" layoutY="240.0" prefHeight="17.0" prefWidth="150.0" stylesheets="@styles/Styles.css" textAlignment="RIGHT" textFill="RED" />
      <TextArea id="textArea" fx:id="createPwDescription" layoutX="226.0" layoutY="257.0" prefHeight="90.0" prefWidth="292.0" promptText="Ex.: Delete after at the of subscription..." stylesheets="@styles/Styles.css" />
      <Label id="header2" layoutX="66.0" layoutY="257.0" prefHeight="35.0" prefWidth="109.0" stylesheets="@styles/Styles.css" text="Memo:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
