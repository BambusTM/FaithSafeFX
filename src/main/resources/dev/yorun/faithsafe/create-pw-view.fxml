<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.yorun.faithsafe.CreatePwController">
   <children>
      <ButtonBar layoutY="360.0" prefHeight="40.0" prefWidth="600.0">
        <buttons>
          <Button mnemonicParsing="false" onAction="#cancelCreatePw" text="cancel" />
            <Button layoutX="515.0" layoutY="18.0" mnemonicParsing="false" onAction="#finishCreatePw" text="create" />
        </buttons>
         <padding>
            <Insets right="10.0" />
         </padding>
      </ButtonBar>
      <Label contentDisplay="CENTER" layoutX="154.0" layoutY="14.0" text="Create a password" textAlignment="CENTER" textFill="#390c0c">
         <font>
            <Font size="36.0" />
         </font>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </Label>
      <Label layoutX="66.0" layoutY="87.0" text="Username:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="66.0" layoutY="118.0" prefHeight="35.0" prefWidth="109.0" text="Domain:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="66.0" layoutY="153.0" prefHeight="35.0" prefWidth="109.0" text="Email:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="66.0" layoutY="188.0" prefHeight="35.0" prefWidth="109.0" text="Password:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label layoutX="66.0" layoutY="223.0" prefHeight="35.0" prefWidth="109.0" text="Validate:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="createPwUsername" layoutX="226.0" layoutY="88.0" prefHeight="25.0" prefWidth="292.0" promptText="username" />
      <TextField fx:id="createPwEmail" layoutX="226.0" layoutY="158.0" prefHeight="25.0" prefWidth="292.0" promptText="example@exmp.com" />
      <TextField fx:id="createPwPassword" layoutX="226.0" layoutY="193.0" onKeyTyped="#confirmPw" onMouseClicked="#confirmPw" prefHeight="25.0" prefWidth="292.0" promptText="password" />
      <TextField fx:id="createPwConfirmPassword" layoutX="226.0" layoutY="228.0" onKeyTyped="#confirmPw" onMouseClicked="#confirmPw" prefHeight="25.0" prefWidth="292.0" promptText="password" />
      <TextField fx:id="createPwDomain" layoutX="226.0" layoutY="123.0" prefHeight="25.0" prefWidth="292.0" promptText="www.example.com" />
      <Label fx:id="createPwWarning" layoutX="383.0" layoutY="258.0" prefHeight="17.0" prefWidth="135.0" style="-fx-alignment: right;" textAlignment="RIGHT" textFill="RED" />
   </children>
</AnchorPane>
